<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF092F47"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="com.eider.domomcu.LoginActivity"
    android:weightSum="1">

    <ImageView
        android:src="@drawable/icono"
        android:layout_width="120dp"
        android:layout_height="120dp" />
    <TextView
        android:text="DomoMcu"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Space
        android:layout_width="0dp"
        android:layout_height="20dp" />
    <TextView
        android:text="Controle y gestione su hogar mas facilmente desde la comodidad de nuestra aplicacion diseÃ±ada especialmente para ti. "
        android:textSize="15sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:layout_width="290dp"
        android:layout_height="wrap_content" />

    <Space
        android:layout_width="0dp"
        android:layout_height="10dp" />

    <TextView
        android:text="Usuario"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:textColor="@color/white"
        android:backgroundTint="@color/white"
        android:layout_width="190dp"
        android:layout_height="40dp" />
    <TextView
        android:shadowColor="@color/white"
        android:text="Password"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:inputType="textPassword"
        android:textColor="@color/white"
        android:backgroundTint="@color/white"
        android:layout_width="190dp"
        android:layout_height="40dp" />
    <Button
        android:text="Login"
        android:background="#FF274B61"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <android.support.v4.widget.Space
        android:layout_width="0dp"
        android:layout_height="10dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:text="f"
            android:background="#FF274B61"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <android.support.v4.widget.Space
            android:layout_width="15dp"
            android:layout_height="0dp" />

        <Button
            android:text="G"
            android:background="#FF274B61"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <TextView
        android:textSize="15sp"
        android:textColor="@color/white"
        android:textStyle="italic"
        android:text="Registrese"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
